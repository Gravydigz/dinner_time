# Dinner Time - Environment Configuration Example
# Copy this file to .env and update values as needed

# Application
APP_NAME=dinner-time
APP_VERSION=1.0.0
NODE_ENV=production

# Server
PORT=8080
HOST=0.0.0.0

# Timezone
TZ=America/New_York

# Data Paths (inside container)
DATA_DIR=/usr/share/nginx/html/data
RECIPES_DIR=/usr/share/nginx/html/data/recipes
UPLOADS_DIR=/usr/share/nginx/html/data/uploads

# Feature Flags (for future use)
ENABLE_UPLOADS=true
ENABLE_RATINGS=true
ENABLE_PLANNING=true

